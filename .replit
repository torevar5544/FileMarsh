modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["mesa", "libGL", "freeglut", "libxkbcommon", "xvfb-run", "fontconfig", "zstd", "dbus", "xorg.libxcb", "xorg.libXcursor", "xorg.libXrandr", "xorg.libXrender", "glib", "xorg.xcbutil", "xorg.xcbutilwm", "xorg.xcbutilimage", "xorg.xcbutilkeysyms", "xorg.xcbutilrenderutil", "xorg.libX11", "xorg.xcbutilcursor", "xorg.xorgserver"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "File Organizer App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "desktop_app"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "File Organizer VNC"

[[workflows.workflow]]
name = "File Organizer App"
author = "agent"

[workflows.workflow.metadata]
outputType = "vnc"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install PyQt6 && xvfb-run -a python main.py"

[[workflows.workflow]]
name = "desktop_app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install PyQt6 && python main.py"

[[workflows.workflow]]
name = "File Organizer VNC"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install PyQt6 && DISPLAY=:0 python main.py"

[workflows.workflow.metadata]
outputType = "vnc"
