modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["dbus", "file", "fontconfig", "freeglut", "freetype", "glib", "glibcLocales", "lcms2", "libGL", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "libxkbcommon", "mesa", "openjpeg", "tcl", "tk", "xorg.libX11", "xorg.libXcursor", "xorg.libXrandr", "xorg.libXrender", "xorg.libxcb", "xorg.xcbutil", "xorg.xcbutilcursor", "xorg.xcbutilimage", "xorg.xcbutilkeysyms", "xorg.xcbutilrenderutil", "xorg.xcbutilwm", "xorg.xorgserver", "xvfb-run", "zlib", "zstd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "File Organizer App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "desktop_app"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "File Organizer VNC"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "File Organizer GUI"

[[workflows.workflow]]
name = "File Organizer App"
author = "agent"

[workflows.workflow.metadata]
outputType = "vnc"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install PyQt6 && xvfb-run -a python main.py"

[[workflows.workflow]]
name = "desktop_app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install PyQt6 && python main.py"

[[workflows.workflow]]
name = "File Organizer VNC"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install PyQt6 && DISPLAY=:0 python main.py"

[workflows.workflow.metadata]
outputType = "vnc"

[[workflows.workflow]]
name = "File Organizer GUI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export DISPLAY=:0 && python main.py"

[workflows.workflow.metadata]
outputType = "vnc"
